@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<h1 class ="emphasisTitle text-center">@ViewData["Title"]</h1>

<div class="row floatingContainer p-3">
    <form asp-for="Input.Email" asp-controller="Categories" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="input-group">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <input type="submit" class="btn btn-lg btn-primary" value="Resend" />
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
