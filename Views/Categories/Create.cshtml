@model ContactPro.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="emphasisTitle text-center">Create</h1>

<div class="row floatingContainer p-3">
    <div class="col-9 col-lg-10">
        <form asp-action="Create" asp-controller="Categories" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group">
                    <input class="form-control"
                            asp-for="Name"
                           placeholder="Please Enter a Category Name" />
                    <input type="submit" class="btn btn-lg btn-primary" value="Save" />
                </div>
            </div>
        </form>
    </div>
    <div class="col d-flex justify-content-center">
        <a asp-action="Index" class="btn btn-lg btn-outline-secondary rounded-pill">Cancel</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
